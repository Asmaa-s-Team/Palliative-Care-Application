<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layoutDirection="rtl"
    android:layout_alignParentRight="true"
    tools:context=".patient.PatientHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/topic_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="الصحة التلطيفية للقلب"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:textColor="@color/primary"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="د. محمد الشرفا"
                android:layout_marginTop="5dp"
                    android:textColor="@color/primary"
                    android:textSize="18dp" />

            <ImageView
                android:id="@+id/topic_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/background"/>

            <TextView
                android:id="@+id/topic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="15dp"
                android:ems="10"
                android:padding="10dp"
                android:text="التفاصيل..."
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="المرفقات"
                android:textColor="@color/primary"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="start"
                android:layout_marginStart="20dp" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:padding="8dp"
                    android:background="@drawable/circle"
                    app:srcCompat="@drawable/pdf"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:padding="17dp"
                    android:background="@drawable/circle"
                    app:srcCompat="@drawable/image2"/>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="17dp"
                    android:background="@drawable/circle"
                    android:layout_marginLeft="15dp"
                    app:srcCompat="@drawable/ic_baseline_bar_chart_24" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="13dp"
                    android:background="@drawable/circle"
                    app:srcCompat="@drawable/video"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lv_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="5dp"
                android:visibility="gone">
            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout1">

                <EditText
                    android:id="@+id/commentEditText"
                    android:layout_width="325dp"
                    android:layout_height="50dp"
                    android:background="@drawable/comment_btn"
                    android:paddingVertical="13dp"
                    android:inputType="text"
                    android:paddingRight="20dp"
                    android:hint="اترك تعليقاً أو سؤلاً"
                    android:textColor="@color/primary" />

                <Button
                    android:id="@+id/btn_comment"
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/ic_baseline_send_24"
                    android:backgroundTint="@color/white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:gravity="center">

                <Button
                    android:id="@+id/subscription_btn"
                    android:layout_width="200dp"
                    android:layout_height="56dp"
                    android:background="@drawable/btn_design"
                    android:text="اشتراك"
                    android:textColor="@color/white"
                    android:layout_marginEnd="20dp"
                    android:textSize="20dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/topic_logo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:shapeAppearanceOverlay="@style/circular2"
                    app:srcCompat="@drawable/coment">
                </com.google.android.material.imageview.ShapeableImageView>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>