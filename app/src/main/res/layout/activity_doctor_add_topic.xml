<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layoutDirection="rtl"
    android:layout_alignParentRight="true"
    tools:context=".patient.PatientHome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="إضافة مقال جديد"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/primary"
        android:textSize="26dp"
        android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/photo"/>


    <EditText
        android:id="@+id/topic_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:ems="10"
        android:layout_marginVertical="15dp"
        android:textColorHint="#566E8A"
        android:hint="عنوان المقال"
        android:inputType="textPersonName"
        android:paddingRight="15dp" />

        <EditText
            android:id="@+id/topic_description"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="15dp"
            android:ems="10"
            android:lines="5"
            android:maxLines="10"
            android:minLines="1"
            android:gravity="top"
            android:hint="تفاصيل المقال"
            android:inputType="text"
            android:paddingRight="15dp"
            android:textColorHint="#566E8A" />

        <EditText
        android:id="@+id/topic_info"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:layout_marginHorizontal="15dp"
        android:ems="10"
        android:textColorHint="#566E8A"
        android:hint="معلومات المقال"
        android:inputType="text"
        android:lines="8"
        android:maxLines="10"
        android:minLines="1"
        android:paddingRight="15dp" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:padding="8dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/pdf"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:padding="17dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/image2"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="17dp"
            android:background="@drawable/circle"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_baseline_bar_chart_24" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="13dp"
            android:background="@drawable/circle"
            app:srcCompat="@drawable/video"/>

    </LinearLayout>

    <Button
        android:id="@+id/add_topic"
        android:layout_width="204dp"
        android:layout_height="56dp"
        android:background="@drawable/btn_design"
        android:text="إضافة"
        android:textColor="@color/white"
        android:layout_marginVertical="20dp"
        android:textSize="20dp" />

    </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>