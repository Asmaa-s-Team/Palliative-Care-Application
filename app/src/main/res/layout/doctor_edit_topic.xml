<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:layoutDirection="rtl"
    tools:context=".doctor.DoctorEditTopic">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="تعديل المقال"
                android:textColor="@color/primary"
                android:textSize="26dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شعار المقال"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary"
                android:textSize="22dp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp"
                android:src="@drawable/photo"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="عنوان المقال"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary"
                android:textSize="22dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/topic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="عنوان المقال"
                android:inputType="text"
                android:paddingRight="10dp"
                android:textColorHint="#566E8A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="تفاصيل المقال"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary"
                android:textSize="24dp"
                android:textStyle="normal" />
            <EditText
                android:id="@+id/topic_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="تفاصيل المقال"
                android:inputType="text"
                android:paddingRight="10dp"
                android:textColorHint="#566E8A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="معلومات المقال"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary"
                android:textSize="24dp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/topic_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:layout_marginHorizontal="15dp"
                android:layout_gravity="right"
                android:layout_marginTop="10dp"
                android:text="معلومات المقال"
                android:inputType="text"
                android:paddingRight="10dp"
                android:textColorHint="#566E8A" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="المرفقات"
                android:layout_gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/primary"
                android:textSize="24dp"
                android:textStyle="normal" />

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/circle"
                    android:padding="8dp"
                    app:srcCompat="@drawable/pdf" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/circle"
                    android:padding="17dp"
                    app:srcCompat="@drawable/image2" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/circle"
                    android:padding="17dp"
                    app:srcCompat="@drawable/ic_baseline_bar_chart_24" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@drawable/circle"
                    android:padding="13dp"
                    app:srcCompat="@drawable/video" />

            </LinearLayout>

            <Button
                android:id="@+id/edit_topic"
                android:layout_width="204dp"
                android:layout_height="56dp"
                android:layout_marginVertical="20dp"
                android:background="@drawable/btn_design"
                android:text="تعديل"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>